@model UserViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you Sure to delete this User?</h1>

<form asp-action="ConfirmDelete">
    <div asp-validation-summary="All"></div>

    <partial name="PartialViews/DetailsDeleteUserPartial" />

    <div class="mt-3 ">
        <input class="btn btn-danger" type="submit" value="Delete" />
        <a class="btn btn-secondary" asp-controller="User" asp-action="Index">Cancle</a>
    </div>
</form>

