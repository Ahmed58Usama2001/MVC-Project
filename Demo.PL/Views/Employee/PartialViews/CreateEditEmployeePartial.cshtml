@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork

@{
    var Departments = new SelectList(_unitOfWork.DepartmentRepository.GetAll(), "Id", "Name");
}

<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input class=" form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input class=" form-control" asp-for="Age" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Salary" class="col-form-label"></label>
    <input class=" form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address" class="col-form-label"></label>
    <input class=" form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-check">
    <input class=" form-check-input" asp-for="IsActive" />
    <label asp-for="IsActive" class="col-form-label"></label>
</div>
<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input class=" form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input class=" form-control" asp-for="PhoneNumber" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HireDate" class="col-form-label"></label>
    <input class=" form-control" asp-for="HireDate" />
</div>
<div class="form-group">
    <label asp-for="Department" class="col-form-label"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@Departments">
        <option value="@null">-- Select Department --</option>
    </select>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input type="file" class="col-control-file" asp-for="Image"/>
</div>