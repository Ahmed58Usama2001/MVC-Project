@model RoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
}

<h1>Update Role</h1>

<br />

<form asp-action="Edit">
    <div asp-validation-summary="All"></div>

    <partial name="PartialViews/CreateEditRolePartial" />


    <div class="my-3">
        <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-route-RoleId="@Model.Id">Add Or Remove Users</a>
    </div>

    <div class="mt-3 ">
        <input class="btn btn-primary" type="submit" value="Update" />
        <a class="btn btn-light" asp-controller="Role" asp-action="Index">Back To List</a>
    </div>
</form>


